<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="course"
            type="com.wiserock.heruri.navigation.course.CourseViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".navigation.course.CourseFragment">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_course_recycler"
            android:layout_marginTop="80dp"
            android:paddingBottom="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <Button
            android:id="@+id/fragment_course_text1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="과제"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:textSize="25dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/fragment_course_text2"

            />

        <Button
            android:id="@+id/fragment_course_text2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="강의"
            android:textSize="25dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginEnd="40dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>