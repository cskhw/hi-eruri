<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="course"
            type="com.wiserock.heruri.navigation.course.LectureViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".navigation.course.LectureFragment">


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/fragment_lecture_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Button
            android:id="@+id/fragment_lecture_text1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="강의"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/fragment_lecture_text2"

            />

        <LinearLayout
            android:id="@+id/fragment_lecture_linearLayout"
            android:layout_width="45dp"
            android:layout_height="3dp"
            android:background="@color/purple"
            app:layout_constraintTop_toBottomOf="@id/fragment_lecture_text1"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="110dp"
            android:orientation="horizontal" />

        <Button
            android:id="@+id/fragment_lecture_text2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="과제"
            android:textSize="25dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:textColor="@color/darkGray"
            android:textStyle="bold"
            android:layout_marginEnd="40dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>