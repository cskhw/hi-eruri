<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="calendar"
            type="com.wiserock.heruri.navigation.planner.PlannerViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:paddingBottom="30dp"
            android:id="@+id/fragment_planner_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="28sp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="내 강의 계획" />

        <TextView
            android:id="@+id/fragment_planner_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜"
            android:textSize="28sp"
            android:layout_marginEnd="30dp"
            app:layout_constraintLeft_toRightOf="@id/fragment_planner_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/fragment_planner_title" />

        <TextView
            android:layout_marginEnd="20dp"
            android:id="@+id/fragment_planner_sunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintRight_toLeftOf="@id/fragment_planner_monday"
            app:layout_constraintTop_toBottomOf="@id/fragment_planner_title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="일" />

        <TextView
            android:id="@+id/fragment_planner_monday"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/fragment_planner_title"
            app:layout_constraintRight_toLeftOf="@+id/fragment_planner_tuesday"
            app:layout_constraintLeft_toRightOf="@id/fragment_planner_sunday"
            android:text="월" />

        <TextView
            android:layout_marginEnd="20dp"
            android:id="@+id/fragment_planner_tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@id/fragment_planner_monday"
            app:layout_constraintRight_toLeftOf="@+id/fragment_planner_wednesday"
            app:layout_constraintTop_toBottomOf="@id/fragment_planner_title"
            android:text="화" />

        <TextView
            android:id="@+id/fragment_planner_wednesday"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@+id/fragment_planner_thursday"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/fragment_planner_title"
            app:layout_constraintLeft_toRightOf="@id/fragment_planner_tuesday"
            android:text="수" />

        <TextView
            android:id="@+id/fragment_planner_thursday"
            android:layout_width="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintRight_toLeftOf="@+id/fragment_planner_friday"
            app:layout_constraintLeft_toRightOf="@id/fragment_planner_wednesday"
            app:layout_constraintTop_toBottomOf="@id/fragment_planner_title"
            android:text="목" />

        <TextView
            android:id="@+id/fragment_planner_friday"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@id/fragment_planner_thursday"
            app:layout_constraintRight_toLeftOf="@+id/fragment_planner_saturday"
            app:layout_constraintTop_toBottomOf="@id/fragment_planner_title"
            android:text="금" />

        <TextView
            android:id="@+id/fragment_planner_saturday"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/fragment_planner_title"
            app:layout_constraintLeft_toRightOf="@id/fragment_planner_friday"
            app:layout_constraintRight_toRightOf="parent"
            android:text="토" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/fragment_planner_viewPager"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            app:layout_constraintTop_toBottomOf="@id/fragment_planner_monday"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>