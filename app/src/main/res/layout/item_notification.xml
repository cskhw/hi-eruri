<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="course"
            type="com.wiserock.heruri.navigation.course.CourseViewModel" />

        <variable
            name="pos"
            type="Integer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> course.setOnClickCourseListener(context, course.notificationList[pos].href)}"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/item_notification_text1"
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="@{course.notificationList[pos].name}"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_notification_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:text="@{course.notificationList[pos].time}"
            app:layout_constraintTop_toBottomOf="@id/item_notification_text1" />

        <TextView
            android:id="@+id/item_notification_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:text="@{course.notificationList[pos].description}"
            app:layout_constraintTop_toBottomOf="@id/item_notification_text2" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/item_notification_text3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
